<!DOCTYPE html>
<html>
<head>
  <title>Proyecto Rails - Demo</title>
</head>
<body>
  <h1>Proyecto Rails - Demo</h1>

  <h2>Crear Nuevo Dato</h2>
  <%= form_with(model: @nuevo_dato, url: datos_path, local: true) do |form| %>
    <div>
      <%= form.label :nombre %>
      <%= form.text_field :nombre %>
    </div>
    <div>
      <%= form.label :descripcion %>
      <%= form.text_area :descripcion %>
    </div>
    <div>
      <%= form.submit "Crear Dato" %>
    </div>
  <% end %>

  <h2>Datos Existentes</h2>
  <ul>
    <% @datos.each do |dato| %>
      <li>
        <strong><%= dato.nombre %></strong>: <%= dato.descripcion %>
        <%= link_to 'Eliminar', dato_path(dato), method: :delete, data: { confirm: '¿Estás seguro?' } %>
      </li>
    
    <% end %>
  </ul>
</body>
</html>
